            app:layout_constraintTop_toBottomOf="@+id/pop_up_patologia_description_formulario_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="MultiAutoCompleteTextView  sasudsdarfcsdegbd fvfgvasd adafgtjyfcfgerseszff gtz       " />

        <ImageButton
            android:id="@+id/pop_up_patologia_description_formulario_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_patologia_description_formulario_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pop_up_patologia_description_formulario_title"
            app:layout_constraintTop_toTopOf="@+id/pop_up_patologia_description_formulario_title"
            app:srcCompat="@drawable/delete_28dp_button_red" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>